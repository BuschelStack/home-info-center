{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🔧 Backend: Virtuelle Umgebung erstellen",
      "type": "shell",
      "command": "python",
      "args": ["-m", "venv", "venv"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "📦 Backend: Requirements installieren",
      "type": "shell",
      "command": "${workspaceFolder}/backend/venv/Scripts/pip.exe",
      "args": ["install", "-r", "requirements.txt"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "🔧 Backend: Virtuelle Umgebung erstellen"
    },
    {
      "label": "🚀 Backend: Setup komplett (venv + requirements)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "🔧 Backend: Virtuelle Umgebung erstellen",
        "📦 Backend: Requirements installieren"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🐍 Backend: Terminal mit venv",
      "type": "shell",
      "command": "${workspaceFolder}/backend/venv/Scripts/Activate.ps1",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "🐍 Backend: App starten",
      "type": "shell",
      "command": "${workspaceFolder}/backend/venv/Scripts/python.exe",
      "args": ["app.py"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "🌐 Frontend: Dependencies installieren",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend/Vue"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🌐 Frontend: Dev Server starten",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend/Vue"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": "🌐 Frontend: Dependencies installieren"
    },
    {
      "label": "🌐 Frontend: Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend/Vue"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "🌐 Frontend: Dependencies installieren"
    },
    {
      "label": "🚀 Beide starten (Backend + Frontend)",
      "dependsOrder": "parallel",
      "dependsOn": [
        "🐍 Backend: App starten",
        "🌐 Frontend: Dev Server starten"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}