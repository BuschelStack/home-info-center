{
  "python.defaultInterpreterPath": "${workspaceFolder}\\backend\\.A\\VENV\\Scripts\\python.exe",
  "python.terminal.activateEnvironment": true,
  "python.terminal.launchArgs": [
    "--no-capture-output"
  ],

  // üß™ Linting & Formatierung
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=120"
  ],
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "ms-python.python",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },

  // üß† Typpr√ºfung & Analyse
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "none"
  },
  "python.analysis.indexing": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.A/VENV/Lib/site-packages"
  ],

  // üß© Autovervollst√§ndigung
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/.A/VENV/Lib/site-packages"
  ],

  // üß™ Tests
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "${workspaceFolder}/tests"
  ],

  // üîê Umgebungsvariablen
  "python.envFile": "${workspaceFolder}/.env",

  // üì¶ Ausschl√ºsse f√ºr Performance
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.git/**": true
  },

  // üß† Spracheinstellungen
  "python.languageServer": "Pylance"
}
